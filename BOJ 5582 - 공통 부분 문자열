#include <stdio.h>
#include <string.h>

char str1[4002], str2[4002];
int len1, len2;
int dp[4001][4001] = { 0, };

int main() {
	scanf("%s", str1 + 1); len1 = strlen(str1 + 1);
	scanf("%s", str2 + 1); len2 = strlen(str2 + 1);

	int ans = 0;
	for (int i = 1; i <= len2; i++) {
		for (int j = 1; j <= len1; j++) {
			if (str2[i] != str1[j]) dp[i][j] = 0;
			else {
				dp[i][j] = dp[i - 1][j - 1] + 1;
				if (ans < dp[i][j]) ans = dp[i][j];
			}
		}
	}

	printf("%d", ans);
	return 0;
}
