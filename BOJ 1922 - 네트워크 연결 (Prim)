#include <stdio.h>
#include <vector>
#include <algorithm>
using namespace std;

typedef pair<int, int> pii;

int N, M;
int cost[1001][1001];
bool visited[1001] = { false, };
int nearest[1001] = { 0, };

int main() {
	int a, b, c;
	scanf("%d %d", &N, &M);

	for (int i = 0; i <= N; i++)
		for (int j = 0; j <= N; j++)
			cost[i][j] = 15000;

	for (int i = 0; i < M; i++) {
		scanf("%d %d %d", &a, &b, &c);
		if (a == b) continue;
		cost[a][b] = c;
		cost[b][a] = c;
	}

	visited[1] = true;
	int cnt = 1, ans = 0;
	for (int i = 2; i <= N; i++)
		if (cost[1][i] <= 10000)
			nearest[i] = 1;
	
	int min, v;
	while (cnt < N) {
		min = 20000;
		for (int i = 2; i <= N; i++) {
			if (visited[i]) continue;
			if (min > cost[i][nearest[i]]) {
				min = cost[i][nearest[i]];
				v = i;
			}
		}

		visited[v] = true;
		cnt++;
		ans += cost[v][nearest[v]];

		for (int i = 2; i <= N; i++) {
			if (visited[i]) continue;
			if (cost[i][nearest[i]] > cost[i][v])
				nearest[i] = v;
		}
	}

	printf("%d", ans);
	return 0;
}
