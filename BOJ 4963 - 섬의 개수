#include <iostream>
#include <vector>
using namespace std;

bool check[50][50];
int w,h,num[50][50];
int dx[8] = { -1,-1,0,1,1,1,0,-1 }, dy[8] = { 0,1,1,1,0,-1,-1,-1 };

void dfs(int x,int y) {
	int nx, ny;
	check[x][y] = true;
	for (int i = 0; i < 8; i++){
		nx = x + dx[i];
		ny = y + dy[i];
		if (0 <= nx && nx < h && 0 <= ny && ny < w) {
			if (num[nx][ny] == 1 && check[nx][ny] == false)
				dfs(nx, ny);
		}
	}
}

int main(void)
{
	int i, j,count;
	while (1) {
		count = 0;
		for (i = 0; i < 50; i++)
			for (j = 0; j < 50; j++)
				check[i][j] = false;

		scanf("%d %d", &w,&h);
		if (h == 0 && w == 0) break;
		for (i = 0; i < h; i++) {
			for (j = 0; j < w; j++)
				scanf("%d", &num[i][j]);
		}

		for (i = 0; i < h; i++) {
			for (j = 0; j < w; j++) {
				if (num[i][j] == 1 && check[i][j] == false) {
					dfs(i, j);
					count++;
				}
			}
		}
		printf("%d\n", count);
	}
	return 0;
}
