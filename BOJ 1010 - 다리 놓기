#include <stdio.h>

int dp[31][31];

int main() {
	int T, N, M;

	for (int i = 0; i <= 30; i++) {
		dp[0][i] = 0;
		dp[i][0] = 1;
	}

	for (int i = 1; i <= 30; i++) {
		for (int j = 1; j <= 30; j++) {
			dp[i][j] = dp[i - 1][j] + dp[i - 1][j - 1];
		}
	}

	scanf("%d", &T);
	while (T--) {
		scanf("%d %d", &N, &M);
		printf("%d\n", dp[M][N]);
	}
}
