#include <iostream>
#define SIZE 100001
using namespace std;

int a[SIZE], check[SIZE], cnt = 0;

int main() {
	int t, i;
	scanf("%d", &t);
	while (t--) {
		int n, num;
		cnt = 0;
    
		for (int i = 0; i < SIZE; i++) {
			a[i] = 0;
			check[i] = 0;
		}
    
		scanf("%d", &n);
		for (int i = 1; i <= n; i++) {
			scanf("%d", &num);
			a[i] = num;
		}
    
		for (i = 1; i <= n; i++) {
			if (check[i] == 1) continue;
			int v = i;
			while (check[v] == 0) {
				check[v] = 1;
				v = a[v];
			}
			int w = i;
			while (w != v) {
				cnt++;
				w = a[w];
			}
		}
    
		printf("%d\n", cnt);
	}
}
