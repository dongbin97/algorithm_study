#include <stdio.h>
#include <algorithm>
using namespace std;
#define INF 10000001;

int N, M, m[100], c[100], sum = 0, dp[10001] = { 0, };  // dp[i] : 비용이 i 일때 최대 확보할 수 있는 메모리

int main() {
	scanf("%d %d", &N, &M);

	for (int i = 0; i < N; i++) 
		scanf("%d", &m[i]);

	for (int i = 0; i < N; i++) {
		scanf("%d", &c[i]);
		sum += c[i];
	}

	
	for (int i = 0; i < N; i++) 
		for (int j = sum; j >= 0; j--) 
			if (j >= c[i]) 
				dp[j] = max(dp[j], dp[j - c[i]] + m[i]);
		
	int ans;
	for (ans = 0; ans <= sum; ans++) 
		if (dp[ans] >= M) 	break;
	
	printf("%d", ans);

	return 0;
}
