#include <stdio.h>

int dp[10001];
int m[100], c[100];

int main() {
	int N, M;
	scanf("%d %d", &N, &M);

	for (int i = 0; i < N; i++)
		scanf("%d", &m[i]);

	int sum = 0;
	for (int i = 0; i < N; i++) {
		scanf("%d", &c[i]);
		sum += c[i];
	}

	for (int i = 0; i < N; i++) {
		for (int j = sum - c[i]; j >= 0; j--) {
			if (dp[c[i] + j] < dp[j] + m[i])
				dp[c[i] + j] = dp[j] + m[i];
		}
	}

	int i;
	for ( i = 0; i <= sum; i++)
		if (dp[i] >= M) break;

	printf("%d", i);
	return 0;
}
