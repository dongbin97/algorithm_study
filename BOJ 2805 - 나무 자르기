#include <stdio.h>
#include <vector>
using namespace std;

int main() {
	vector<int> tree;
	int N, M, t, start = 0, end = 0, mid,  ans = 0;
	long long sum;
	scanf("%d %d", &N, &M);

	for (int i = 0; i < N; i++) {
		scanf("%d", &t);
		tree.push_back(t);
		if (end < t) end = t;
	}

	while (start <= end) {
		sum = 0;
		mid = (start + end) / 2;
		for (int i = 0; i < N; i++)
			sum = sum + ((mid >= tree[i]) ? 0 : tree[i] - mid);

		if (sum < M) end = mid - 1;
		else {
			if (ans < mid) ans = mid;
			start = mid + 1;
		}
	}

	printf("%d", ans);
	return 0;
}
