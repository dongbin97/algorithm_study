#include <stdio.h>
#include <string.h>
#include <stack>
#include <algorithm>
using namespace std;

char str1[1002], str2[1002], ans[1002];
int len1, len2;
int dp[1002][1002];
stack<char> st;

int main() {
	scanf("%s", str1 + 1); len1 = strlen(str1 + 1);
	scanf("%s", str2 + 1); len2 = strlen(str2 + 1);

	for (int i = 1; i <= len2; i++) {
		for (int j = 1; j <= len1; j++) {
			if (str1[j] == str2[i])
				dp[i][j] = dp[i - 1][j - 1] + 1;
			else
				dp[i][j] = max(dp[i][j - 1], dp[i - 1][j]);
		}
	}
	
	printf("%d\n", dp[len2][len1]);

	int i = len2, j = len1;
	while (i >= 1 && j >= 1) {
		if (str2[i] == str1[j]) {
			st.push(str2[i]);
			i--; j--;
		}
		else {
			if (dp[i][j - 1] > dp[i - 1][j])
				j--;
			else i--;
		}
	}

	while (!st.empty()) {
		printf("%c", st.top());
		st.pop();
	}

	return 0;
}
