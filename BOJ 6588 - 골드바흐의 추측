#include <stdio.h>

bool prime[1000001] = { false, };

void get_prime() {
	for (int i = 2; i <= 1000; i++) {
		if (prime[i] == false) {
			//printf("%d ", i);
			for (int j = 2 * i; j <= 1000000; j = j + i)
				prime[j] = true;
		}
	}
}

int main() {
	int num;
	get_prime();
	while (1) {
		scanf("%d", &num);
		if (num == 0) break;
		int i;
		for (i = 3; i < num / 2; i++) {
			if (prime[i] == false && prime[num - i] == false)
				break;
		}
		if (num != 6 && i == num / 2) printf("Goldbach's conjecture is wrong.\n");
		printf("%d = %d + %d\n", num, i, num - i);
	}
	return 0;
}
