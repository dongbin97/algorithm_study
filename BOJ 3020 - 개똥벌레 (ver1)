#include <stdio.h>
#include <vector>
using namespace std;

vector<int> crash;
int main() {
	int N, H, x;
	crash.resize(500001);
	scanf("%d %d", &N, &H);

	for (int i = 0; i < N; i++) {
		scanf("%d", &x);

		if (i % 2 == 0) {
			crash[1]++;
			crash[x + 1]--;
		}
		else crash[H - x + 1]++;
	}

	for (int i = 2; i <= H; i++) {
		crash[i] = crash[i] + crash[i - 1];
	}

	int min = 200001, cnt = 0;
	for (int i = 1; i <= H; i++) {
		if (crash[i] < min) {
			cnt = 1;
			min = crash[i];
		}
		else if (crash[i] == min) cnt++;
	}

	printf("%d %d", min, cnt);
	return  0;
}
