#include <iostream>
using namespace std;

void hanoi(int from, int to, int auxilary,int size) {
	if (size < 1) return;
	hanoi(from, auxilary, to, size - 1);
	printf("%d %d\n", from, to);
	hanoi(auxilary, to, from, size - 1);
}
int main() {
	int N;
	scanf("%d", &N);
	printf("%d\n",(1<<N)-1);
	hanoi(1, 3, 2, N);
}
